---
import { Image } from "astro:assets";
//import Nav from "./nav/Nav.astro";

interface Props {
    logo?: string;
}

const { logo } = Astro.props;
---

<div
    id="main-header"
    class="backdrop-blur-sm sticky top-0 z-[100] h-[4.5rem] sm:h-24 p-3 border-b border-[#ffffff10] mx-auto w-full max-w-screen-xl shadow-lg"
>
    <a href="/" class="float-left flex cursor-pointer items-end">
        <Image
            class="hidden sm:flex"
            src={logo || "/logo.png"}
            alt="Logo"
            width="64"
            height="64"
            style="image-rendering: pixelated;"
        />
        <Image
            class="flex sm:hidden"
            src={logo || "/logo.png"}
            alt="Logo"
            width="48"
            height="48"
            style="image-rendering: pixelated;"
        />
        <div
            class="text-gray-50 transition-colors duration-300 ease-in-out hover:text-gray-300"
        >
            <h1
                class="mx-3 text-3xl md:text-5xl"
                style="text-shadow: -1px 1px 0px #888, -2px 2px 0px #888, -3px 3px 0px #666;"
            >
                hri7566
            </h1>
            <p class="mx-3 md:text-xl text-md text-gray-500 hover:[unset]">
                Ethan
            </p>
        </div>
    </a>
</div>
